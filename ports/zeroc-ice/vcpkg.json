{
  "name": "zeroc-ice",
  "version": "3.7.10",
  "port-version": 1,
  "maintainers": "Benjamin Oldenburg <benjamin.oldenburg@ordis.co.th>",
  "description": "Comprehensive RPC framework with support for C++, CSharp, Java, JavaScript, Python and more. (This port only covers C++.)",
  "homepage": "https://github.com/zeroc-ice/ice",
  "license": null,
  "supports": "linux | osx | (windows & !mingw & !uwp & !xbox)",
  "dependencies": [
    "bzip2",
    {
      "$comment": "Used by src/Ice/SHA1.cpp",
      "name": "openssl",
      "platform": "!osx & !windows"
    },
    {
      "name": "vcpkg-msbuild",
      "host": true,
      "platform": "windows"
    },
    {
      "name": "zeroc-ice",
      "host": true,
      "default-features": false
    },
    {
      "name": "zeroc-ice-mcpp",
      "platform": "native"
    }
  ],
  "default-features": [
    "glacier2",
    "icebox",
    "icegrid",
    "icessl",
    "icestorm"
  ],
  "features": {
    "glacier2": {
      "description": "Glacier2 is a lightweight firewall traversal solution for Ice applications."
    },
    "glacier2lib": {
      "description": "Deprecated. Use feature glacier2 instead.",
      "dependencies": [
        {
          "name": "zeroc-ice",
          "default-features": false,
          "features": [
            "glacier2"
          ]
        }
      ]
    },
    "glacier2router": {
      "description": "The Glacier2 router daemon.",
      "supports": "!static",
      "dependencies": [
        {
          "name": "zeroc-ice",
          "default-features": false,
          "features": [
            "glacier2",
            "icessl"
          ]
        }
      ]
    },
    "icebox": {
      "description": "IceBox is a framework for Ice application services.",
      "supports": "!(windows & static)"
    },
    "iceboxlib": {
      "description": "Deprecated. Use feature icebox instead.",
      "dependencies": [
        {
          "name": "zeroc-ice",
          "default-features": false,
          "features": [
            "icebox"
          ]
        }
      ]
    },
    "iceboxtools": {
      "description": "The IceBox server and administration programs.",
      "supports": "!static",
      "dependencies": [
        {
          "name": "zeroc-ice",
          "default-features": false,
          "features": [
            "icebox"
          ]
        }
      ]
    },
    "icebridge": {
      "description": "IceBridge is an Ice service that acts as a bridge between one or more clients and a server.",
      "supports": "!static"
    },
    "icediscovery": {
      "description": "IceDiscovery provides a location service using UDP multicast that enables Ice applications to discover objects and object adapters."
    },
    "icegrid": {
      "description": "IceGrid is a location and activation service for Ice applications.",
      "dependencies": [
        "lmdb",
        {
          "name": "zeroc-ice",
          "default-features": false,
          "features": [
            "glacier2"
          ]
        }
      ]
    },
    "icegridlib": {
      "description": "Deprecated. Use feature icegrid instead.",
      "dependencies": [
        {
          "name": "zeroc-ice",
          "default-features": false,
          "features": [
            "icegrid"
          ]
        }
      ]
    },
    "icegridtools": {
      "description": "IceGrid tools.",
      "supports": "!static",
      "dependencies": [
        "expat",
        "lmdb",
        {
          "name": "readline",
          "platform": "linux"
        },
        {
          "$more_features": "IceXML IcePatch2 IceDB $(local_dependencies)",
          "name": "zeroc-ice",
          "default-features": false,
          "features": [
            "glacier2",
            "icebox",
            "icegrid",
            "icelocatordiscovery",
            "icepatch2",
            "icessl",
            "icestorm"
          ]
        }
      ]
    },
    "icelocatordiscovery": {
      "description": "IceLocatorDiscovery is an Ice plug-in that enables the discovery of IceGrid and custom locators via UDP multicast.",
      "dependencies": [
        {
          "name": "zeroc-ice",
          "features": [
            "glacier2",
            "icebox",
            "icessl",
            "icestorm"
          ]
        }
      ]
    },
    "icepatch2": {
      "description": "IcePatch2 is the Ice solution for secure replication of a directory tree.",
      "supports": "!windows",
      "dependencies": [
        "bzip2"
      ]
    },
    "icepatch2tools": {
      "description": "IcePatch2 tools.",
      "supports": "!static",
      "dependencies": [
        {
          "name": "zeroc-ice",
          "features": [
            "icepatch2"
          ]
        }
      ]
    },
    "icessl": {
      "description": "IceSSL is a plug-in that provides security capabilities using the Transport Layer Security (TLS) protocol.",
      "dependencies": [
        {
          "name": "openssl",
          "platform": "!windows"
        }
      ]
    },
    "icestorm": {
      "description": "IceStorm is an efficient publish/subscribe service for Ice applications.",
      "dependencies": [
        "lmdb",
        {
          "name": "zeroc-ice",
          "features": [
            "glacier2",
            "icebox",
            "icegrid"
          ]
        }
      ]
    },
    "icestormlib": {
      "description": "Deprecated. Use feature icestorm instead.",
      "dependencies": [
        {
          "name": "zeroc-ice",
          "default-features": false,
          "features": [
            "icestorm"
          ]
        }
      ]
    },
    "icestormtools": {
      "description": "IceStorm tools",
      "supports": "!static",
      "dependencies": [
        "lmdb",
        {
          "name": "readline",
          "platform": "linux"
        },
        {
          "name": "zeroc-ice",
          "features": [
            "glacier2",
            "icebox",
            "icegrid",
            "icepatch2",
            "icestorm"
          ]
        }
      ]
    }
  }
}
